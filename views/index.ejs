<!DOCTYPE html>
<html>
  <head><% include partials/template/head.ejs %></head>
  <body id="<%= pageID %>">
    <% include partials/template/header.ejs %>
    <div class="container">
      <div class="row">
          <div class="col-sm-6">
              <div style="text-align:center">
                  <div>
                      <div style="text-align:center">
                          <h2><strong>Pengumuman <a style="color:black" href="/pengumumans/create">+</a></strong></h2>                    
                      </div>
                      <table class="">
                          <thead>
                            <th style="width:20%"> Nama Pengumuman </th>
                            <th style="width:20%"> Tanggal Dibuat </th>
                            <th style="width:20%"> Keterangan </th>
                          </thead>
                          <tbody>
                            <%for(let i = 0 ; i < pengumumans.length; i++){%>
                            <tr>
                              <td><%= pengumumans[i].namapengumuman %></td>
                              <td><%= pengumumans[i].tgldibuat %></td>
                              <td><%= pengumumans[i].keterangan %></td>
                              <td >
                                <a style="color:black" href="/pengumumans/delete/<%=pengumumans[i].id %>">Hapus</a>
                                <a style="color:black" href="/pengumumans/edit/<%=pengumumans[i].id %>">Edit</a>
                              </td>
                    
                            </tr>
                            <%} %>
                          </tbody>
                        </table>
                  </div>                          
              </div>
          </div> 
          <div class="col-sm-6">
              <div style="text-align:center">
                  <div>
                      <div style="text-align:center">
                          <h2><strong>Agenda<a style="color:black" href="/agendas/create">+</a></strong></h2>                    
                      </div>
                      <table class="">
                          <thead>
                            <th> Tanggal </th>
                            <th> Waktu Acara </th>
                            <th> Keterangan </th>
                          </thead>
                          <tbody>
                            <%for(let i = 0 ; i < agendas.length; i++){%>
                            <tr>
                              <td><%= agendas[i].tanggal %></td>
                              <td><%= agendas[i].waktuacara %></td>
                              <td><%= agendas[i].keterangan %></td>
                              <td >
                                <a style="color:black" href="/agendas/delete/<%=agendas[i].id %>">Hapus</a>
                                <a style="color:black" href="/agendas/edit/<%=agendas[i].id %>">Edit</a>
                              </td>
                    
                            </tr>
                            <%} %>
                          </tbody>
                        </table>
                  </div>        
              </div>
          </div>
        </aside><!-- secondary -->
      </div>
    </div><!-- container -->
  </body>
  <footer>
    <% include partials/template/footer.ejs %>
  </footer>
</html>
